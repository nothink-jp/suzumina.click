{
	"extends": "../../packages/typescript-config/base.json",
	"compilerOptions": {
		"module": "NodeNext",
		"esModuleInterop": true,
		"moduleResolution": "nodenext",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "ES2022",
		"lib": ["ES2022"],
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"@suzumina.click/shared-types": ["../../packages/shared-types/dist/index.d.ts"]
		}
	},
	"compileOnSave": true,
	"include": ["src"],
	"exclude": ["src/**/*.test.ts"]
}
