{
	"extends": "../../packages/typescript-config/base.json",
	"compilerOptions": {
		"module": "NodeNext",
		"esModuleInterop": true,
		"moduleResolution": "nodenext",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "ESNext",
		"lib": ["ESNext", "dom"]
	},
	"compileOnSave": true,
	"include": ["src"],
	"exclude": ["src/**/*.test.ts"]
}
