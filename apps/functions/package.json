	"devDependencies": {
		"@biomejs/biome": "2.0.5",
		"@types/cheerio": "^1.0.0",
		"@types/node": "^24.0.3",
		"@vitest/coverage-v8": "^3.2.4",
		"rimraf": "^6.0.1",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4"
