{
	"name": "@suzumina.click/functions",
	"version": "0.3.1",
	"private": true,
	"scripts": {
		"build": "tsc && cp -r src/assets lib/assets",
		"build:watch": "tsc --watch",
		"lint": "biome check ./src",
		"format": "biome format --write ./src",
		"check": "biome check --write ./src",
		"typecheck": "tsc --noEmit",
		"clean": "rimraf lib coverage node_modules/.cache .vitest *.tgz",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"debug:parser": "tsx src/development/debug-dlsite-parser.ts",
		"debug:quick": "tsx src/development/quick-test-parser.ts",
		"debug:monitor": "tsx src/development/watch-dlsite-changes.ts",
		"debug:baseline": "tsx src/development/watch-dlsite-changes.ts --create-baseline",
		"debug:compare": "tsx src/development/watch-dlsite-changes.ts --compare-baseline",
		"collect:work-ids": "tsx src/development/collect-work-ids.ts",
		"local:supplement": "tsx src/development/run-local-supplement.ts",
		"analyze:failures": "tsx src/development/analyze-failed-work-ids.ts",
		"debug:processing": "tsx src/development/debug-data-processing.ts",
		"debug:age-categories": "tsx src/development/check-age-categories.ts",
		"debug:firestore-save": "tsx src/development/test-firestore-save.ts",
		"debug:individual-api": "tsx src/development/individual-api-test.ts",
		"debug:quick-analysis": "tsx src/development/quick-failure-analysis.ts",
		"reset:metadata": "tsx src/development/reset-metadata.ts",
		"monitor:failure-rate": "tsx src/development/run-failure-rate-monitor.ts",
		"notify:weekly-report": "tsx src/development/run-weekly-report.ts"
	},
	"main": "lib/endpoints/index.js",
	"engines": {
		"node": "22"
	},
	"dependencies": {
		"@google-cloud/firestore": "^7.11.2",
		"@google-cloud/functions-framework": "^4.0.0",
		"@suzumina.click/shared-types": "workspace:*",
		"cheerio": "^1.1.0",
		"googleapis": "^150.0.1"
	},
	"devDependencies": {
		"@suzumina.click/typescript-config": "workspace:*",
		"@types/node": "^24.0.12",
		"@vitest/coverage-v8": "^3.2.4",
		"rimraf": "^6.0.1",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4"
	}
}
