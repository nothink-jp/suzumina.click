{
	"name": "@suzumina.click/functions",
	"version": "0.3.10",
	"private": true,
	"scripts": {
		"build": "tsc && cp -r src/assets lib/assets",
		"build:watch": "tsc --watch",
		"lint": "biome check ./src",
		"format": "biome format --write ./src",
		"check": "biome check --write ./src",
		"typecheck": "tsc --noEmit",
		"clean": "rimraf lib coverage node_modules/.cache .vitest *.tgz",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"collect:work-ids": "dotenv -e .env -- tsx src/tools/core/collect-work-ids.ts",
		"collect:complete-local": "dotenv -e .env -- tsx src/tools/core/local-complete-collector.ts",
		"detect:region-restrictions": "dotenv -e .env -- tsx src/tools/core/region-restriction-detector.ts",
		"tools:stats": "dotenv -e .env -- tsx src/tools/run-tools.ts stats",
		"tools:report": "dotenv -e .env -- tsx src/tools/run-tools.ts report",
		"tools:reset": "dotenv -e .env -- tsx src/tools/run-tools.ts reset",
		"tools:help": "dotenv -e .env -- tsx src/tools/run-tools.ts help",
		"check:integrity": "dotenv -e .env -- tsx src/tools/core/run-data-integrity-check.ts",
		"check:price-history": "dotenv -e .env -- tsx src/tools/check-price-history.ts",
		"debug:price-history": "dotenv -e .env -- tsx src/tools/debug-price-history.ts"
	},
	"main": "lib/endpoints/index.js",
	"engines": {
		"node": "22.21.1"
	},
	"dependencies": {
		"@google-cloud/firestore": "^8.0.0",
		"@google-cloud/functions-framework": "^4.0.0",
		"@suzumina.click/shared-types": "workspace:*",
		"googleapis": "^162.0.0"
	},
	"devDependencies": {
		"@suzumina.click/typescript-config": "workspace:*",
		"@types/node": "^24.10.1",
		"@vitest/coverage-v8": "^4.0.10",
		"dotenv-cli": "^10.0.0",
		"rimraf": "^6.1.0",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vitest": "^4.0.10"
	}
}
