{
	"name": "@suzumina.click/functions",
	"version": "0.3.1",
	"private": true,
	"scripts": {
		"build": "tsc && cp -r src/assets lib/assets",
		"build:watch": "tsc --watch",
		"lint": "biome check ./src",
		"format": "biome format --write ./src",
		"check": "biome check --write ./src",
		"typecheck": "tsc --noEmit",
		"clean": "rimraf lib coverage node_modules/.cache .vitest *.tgz",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"collect:work-ids": "LOG_FORMAT=console tsx src/development/core/collect-work-ids.ts",
		"debug:processing": "LOG_FORMAT=console tsx src/development/core/debug-data-processing.ts",
		"debug:individual-api": "LOG_FORMAT=console tsx src/development/core/individual-api-test.ts",
		"local:supplement": "LOG_FORMAT=console tsx src/development/core/local-supplement-collector.ts",
		"analyze:failures": "LOG_FORMAT=console tsx src/development/analysis/analysis-tools.ts",
		"analyze:quick": "LOG_FORMAT=console tsx src/development/analysis/analysis-tools.ts quick",
		"analyze:full": "LOG_FORMAT=console tsx src/development/analysis/analysis-tools.ts full",
		"validate:workflow": "LOG_FORMAT=console tsx src/development/validation/validation-tools.ts workflow",
		"validate:age-categories": "LOG_FORMAT=console tsx src/development/validation/validation-tools.ts age-categories",
		"validate:data-quality": "LOG_FORMAT=console tsx src/development/validation/validation-tools.ts data-quality",
		"validate:connection": "LOG_FORMAT=console tsx src/development/validation/validation-tools.ts connection",
		"validate:suite": "LOG_FORMAT=console tsx src/development/validation/validation-tools.ts suite",
		"run:monitor": "LOG_FORMAT=console tsx src/development/run-tools.ts monitor",
		"run:supplement": "LOG_FORMAT=console tsx src/development/run-tools.ts supplement",
		"run:report": "LOG_FORMAT=console tsx src/development/run-tools.ts report",
		"run:reset": "LOG_FORMAT=console tsx src/development/run-tools.ts reset",
		"run:help": "LOG_FORMAT=console tsx src/development/run-tools.ts help",
		"reset:metadata": "LOG_FORMAT=console tsx src/development/reset-metadata.ts"
	},
	"main": "lib/endpoints/index.js",
	"engines": {
		"node": "22"
	},
	"dependencies": {
		"@google-cloud/firestore": "^7.11.2",
		"@google-cloud/functions-framework": "^4.0.0",
		"@suzumina.click/shared-types": "workspace:*",
		"cheerio": "^1.1.0",
		"googleapis": "^150.0.1"
	},
	"devDependencies": {
		"@suzumina.click/typescript-config": "workspace:*",
		"@types/node": "^24.0.12",
		"@vitest/coverage-v8": "^3.2.4",
		"rimraf": "^6.0.1",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4"
	}
}
