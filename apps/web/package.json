{
	"name": "@suzumina.click/web",
	"version": "0.3.10",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "biome check src/ e2e/ *.ts *.mjs --files-ignore-unknown=true",
		"format": "biome format --write ./src",
		"check": "biome check --write ./src",
		"typecheck": "tsc --noEmit --skipLibCheck",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:critical": "vitest run --bail 1",
		"test:server": "vitest run --config vitest.server.config.ts",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:debug": "playwright test --debug",
		"clean": "rimraf .next coverage node_modules/.cache .vitest test-results playwright-report",
		"deploy:build": "cd ../.. && docker build -f apps/web/Dockerfile -t suzumina-web .",
		"deploy:test": "docker run --rm -p 8080:8080 suzumina-web",
		"analyze": "ANALYZE=true next build",
		"migrate:audiobuttons:dry": "tsx src/scripts/complete-audiobutton-migration.ts --dry-run",
		"migrate:audiobuttons:backup": "tsx src/scripts/complete-audiobutton-migration.ts --skip-backup --dry-run",
		"migrate:audiobuttons:run": "tsx src/scripts/complete-audiobutton-migration.ts",
		"migrate:audiobuttons:validate": "tsx src/scripts/complete-audiobutton-migration.ts --validate-only"
	},
	"dependencies": {
		"@auth/core": "^0.40.0",
		"@google-cloud/firestore": "^7.11.6",
		"@hookform/resolvers": "^5.2.2",
		"@suzumina.click/shared-types": "workspace:*",
		"@suzumina.click/ui": "workspace:*",
		"lucide-react": "^0.545.0",
		"next": "^15.5.4",
		"next-auth": "5.0.0-beta.29",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-hook-form": "^7.64.0",
		"recharts": "3.2.1",
		"resend": "^6.1.2",
		"sonner": "^2.0.7",
		"swr": "^2.3.6",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@next/bundle-analyzer": "^15.5.4",
		"@playwright/test": "^1.56.0",
		"@suzumina.click/typescript-config": "workspace:*",
		"@tailwindcss/postcss": "^4.1.14",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^24.7.1",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.1",
		"@vitejs/plugin-react": "^5.0.4",
		"@vitest/coverage-v8": "^3.2.4",
		"babel-plugin-react-compiler": "19.1.0-rc.3",
		"happy-dom": "^20.0.0",
		"playwright": "^1.56.0",
		"rimraf": "^6.0.1",
		"tailwindcss": "^4.1.14",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4"
	}
}
