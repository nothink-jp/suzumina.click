{
  "name": "@suzumina.click/web",
  "version": "0.1.2",
  "description": "Web application for suzumina.click",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "NODE_ENV=production DATABASE_URL=postgres://suzumina_app:build_password@localhost:5432/suzumina_db next build",
    "start": "next start",
    "lint": "biome lint .",
    "lint:fix": "biome lint --fix .",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "check": "tsc --noEmit && biome check .",
    "clean": "rimraf .next .turbo coverage next-env.d.ts node_modules",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@google-cloud/secret-manager": "^6",
    "drizzle-orm": "^0.41.0",
    "framer-motion": "^12.6.3",
    "lucide-react": "^0.487.0",
    "next": "15.2.4",
    "next-auth": "^5.0.0-beta.25",
    "postgres": "^3.4.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^17.4.4",
    "@heroui/theme": "^2.4.13",
    "@suzumina.click/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.3",
    "@testing-library/react": "^16",
    "@types/bun": "^1.2.8",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.30.6",
    "happy-dom": "^17",
    "tailwindcss": "^4.1.3",
    "typescript": "5.8.3"
  }
}
