# Firebase設定
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Discord OAuth2設定 (Next.js Server Actionsで使用)
# クライアントIDはフロントエンドとサーバーサイドの両方で使用するためNEXT_PUBLICを使用
NEXT_PUBLIC_DISCORD_CLIENT_ID=your-discord-client-id
NEXT_PUBLIC_DISCORD_REDIRECT_URI=https://your-domain.com/auth/discord/callback

# サーバーサイドのみで使用する変数（機密情報）
# クライアント側からは参照できないため、NEXT_PUBLICプレフィックスは使用しない
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_TARGET_GUILD_ID=your-discord-guild-id

# Firebase Admin SDK
# 本番環境ではSecret Managerを使用することを推奨
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}