# Discord OAuth Application Settings
# Create at: https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here

# Discord Bot Token (optional, for advanced guild management)
# Used for guild member verification API
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# NextAuth Secret
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here

# NextAuth URL
NEXTAUTH_URL=http://localhost:3000

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=suzumina-click

# YouTube API (for video information)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Default Admin Discord IDs (comma-separated)
# These users will automatically be assigned admin role on first login
DEFAULT_ADMIN_DISCORD_IDS=123456789012345678,987654321098765432