# PostgreSQL設定
POSTGRES_USER=suzumina_app
POSTGRES_PASSWORD=your_strong_password_here  # 本番環境では強力なパスワードを使用してください
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/suzumina_db

# テストデータベース設定
TEST_DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/suzumina_test_db

# 認証関連の設定
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here  # openssl rand -base64 32 で生成できます
AUTH_TRUST_HOST=localhost

# Discord OAuth設定
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_GUILD_ID=your_discord_guild_id