{
	"extends": "@suzumina.click/typescript-config/nextjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@suzumina.click/ui/*": ["../../packages/ui/src/*"]
		},
		"plugins": [{ "name": "next" }]
	},
	"include": [
		"next-env.d.ts",
		"next.config.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules", "**/*.test.*", "**/*.stories.*", "vitest.setup.ts", ".storybook"]
}
