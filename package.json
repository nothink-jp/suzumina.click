{
  "name": "suzumina.click",
  "version": "0.1.4",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @suzumina.click/web dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "check": "pnpm -r check",
    "clean": "rimraf node_modules/.cache coverage",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "storybook": "pnpm --filter @suzumina.click/web storybook",
    "emulator:start": "firebase emulators:start",
    "emulator:start-with-data": "firebase emulators:start --import=./emulator-data --export-on-exit",
    "emulator:export-data": "firebase emulators:export ./emulator-data",
    "emulator:seed": "node scripts/seed-firestore.mjs",
    "emulator:start-and-seed": "firebase emulators:start & sleep 5 && node scripts/seed-firestore.mjs"
  },
  "dependencies": {
    "firebase": "^11.6.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@vitest/coverage-v8": "^3.1.2",
    "firebase-tools": "^13.35.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  },
  "engines": {
    "node": "22",
    "pnpm": "10"
  }
}
