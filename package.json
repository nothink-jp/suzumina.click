{
  "name": "suzumina.click",
  "version": "0.1.3",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @suzumina.click/web dev",
    "lint": "pnpm -r lint",
    "lint:web": "pnpm --filter @suzumina.click/web lint",
    "lint:functions": "pnpm --filter @suzumina.click/functions lint",
    "format": "pnpm -r format",
    "format:web": "pnpm --filter @suzumina.click/web format",
    "format:functions": "pnpm --filter @suzumina.click/functions format",
    "check": "pnpm -r check",
    "check:web": "pnpm --filter @suzumina.click/web check",
    "check:functions": "pnpm --filter @suzumina.click/functions check",
    "clean": "rimraf node_modules/.cache coverage",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "run-p \"test:web -- --coverage\" \"test:functions -- --coverage\"",
    "test:web": "pnpm --filter @suzumina.click/web test",
    "test:functions": "pnpm --filter @suzumina.click/functions test",
    "storybook": "pnpm --filter @suzumina.click/web storybook",
    "emulator:start": "firebase emulators:start",
    "emulator:start-with-data": "firebase emulators:start --import=./emulator-data --export-on-exit",
    "emulator:export-data": "firebase emulators:export ./emulator-data",
    "emulator:seed": "node scripts/seed-firestore.mjs",
    "emulator:start-and-seed": "firebase emulators:start & sleep 5 && node scripts/seed-firestore.mjs"
  },
  "dependencies": {
    "firebase": "^11.6.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "firebase-tools": "^13.0.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  },
  "engines": {
    "node": "22",
    "pnpm": "10"
  }
}