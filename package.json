{
  "name": "suzumina.click",
  "version": "0.1.4",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @suzumina.click/web dev",
    "build": "pnpm --filter @suzumina.click/shared-types build && pnpm --filter @suzumina.click/{functions,web} build",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "check": "pnpm -r check",
    "clean": "rimraf node_modules/.cache coverage",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "storybook": "pnpm --filter @suzumina.click/web storybook"
  },
  "dependencies": {
    "firebase": "^11.6.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@vitest/coverage-v8": "^3.1.2",
    "lefthook": "^1.11.12",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  },
  "engines": {
    "node": "22",
    "pnpm": "10"
  }
}
