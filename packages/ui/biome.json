{
	"extends": "//",
	"root": false,
	"files": {
		"maxSize": 1048576,
		"ignoreUnknown": true
	},
	"linter": {
		"rules": {
			"suspicious": {
				"noExplicitAny": "warn",
				"noConsole": "off",
				"noArrayIndexKey": "off"
			},
			"a11y": {
				"useButtonType": "off",
				"useValidAnchor": "off",
				"noLabelWithoutControl": "off"
			},
			"correctness": {
				"noUnusedFunctionParameters": "off"
			}
		}
	},
	"overrides": [
		{
			"includes": ["**/*.stories.tsx"],
			"linter": {
				"enabled": false
			}
		}
	]
}
