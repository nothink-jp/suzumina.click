{
	"extends": "//",
	"root": false,
	"files": {
		"maxSize": 1048576
	},
	"linter": {
		"rules": {
			"suspicious": {
				"noExplicitAny": "warn",
				"noConsole": "off",
				"noArrayIndexKey": "off"
			},
			"a11y": {
				"useButtonType": "off",
				"useValidAnchor": "off",
				"noLabelWithoutControl": "off"
			},
			"correctness": {
				"noUnusedFunctionParameters": "off"
			}
		}
	},
	"overrides": [
		{
			"includes": ["**/src/components/design-tokens/*.stories.tsx"],
			"linter": {
				"enabled": false
			},
			"formatter": {
				"enabled": false
			}
		},
		{
			"includes": ["**/*.stories.tsx"],
			"linter": {
				"rules": {
					"suspicious": {
						"noArrayIndexKey": "off",
						"noExplicitAny": "off"
					},
					"a11y": {
						"useButtonType": "off",
						"useValidAnchor": "off",
						"noLabelWithoutControl": "off"
					},
					"nursery": {
						"useUniqueElementIds": "off"
					}
				}
			}
		}
	]
}
