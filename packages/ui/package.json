{
	"name": "@suzumina.click/ui",
	"version": "0.3.12",
	"type": "module",
	"private": true,
	"scripts": {
		"build": "echo 'UI package does not require build step' && exit 0",
		"lint": "find src -name '*.tsx' -not -name '*.stories.tsx' -not -path '*/design-tokens/*' -o -name '*.ts' -not -path '*/design-tokens/*' | xargs biome check --max-diagnostics=120",
		"format": "biome format --write .",
		"check": "biome check --write .",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:critical": "vitest run --reporter=verbose button.test.tsx dialog.test.tsx",
		"clean": "rimraf coverage storybook-static node_modules/.cache .vitest",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"dependencies": {
		"@suzumina.click/shared-types": "workspace:*",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cmdk": "1.1.1",
		"date-fns": "4.1.0",
		"embla-carousel-react": "8.6.0",
		"input-otp": "1.4.2",
		"lucide-react": "^0.563.0",
		"next": "^16.1.6",
		"next-themes": "^0.4.6",
		"radix-ui": "latest",
		"react": "^19.2.4",
		"react-day-picker": "^9.13.0",
		"react-dom": "^19.2.4",
		"react-hook-form": "^7.71.1",
		"react-resizable-panels": "^3.0.6",
		"recharts": "3.7.0",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.4.0",
		"tw-animate-css": "^1.4.0",
		"vaul": "^1.1.2"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^5.0.0",
		"@storybook/addon-a11y": "^10.2.3",
		"@storybook/addon-docs": "^10.2.3",
		"@storybook/addon-onboarding": "^10.2.3",
		"@storybook/addon-vitest": "^10.2.3",
		"@storybook/react-vite": "^10.2.3",
		"@suzumina.click/typescript-config": "workspace:*",
		"@tailwindcss/postcss": "^4.1.18",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.2",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^25.2.0",
		"@types/react": "^19.2.10",
		"@types/react-dom": "^19.2.3",
		"@vitest/coverage-v8": "^4.0.18",
		"happy-dom": "^20.4.0",
		"rimraf": "^6.1.2",
		"storybook": "^10.2.3",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"exports": {
		"./globals.css": "./src/styles/globals.css",
		"./postcss.config": "./postcss.config.mjs",
		"./lib/*": "./src/lib/*.ts",
		"./components/*": "./src/components/*.tsx",
		"./components/ui/*": "./src/components/ui/*.tsx",
		"./components/custom": "./src/components/custom/index.ts",
		"./components/custom/*": "./src/components/custom/*.tsx",
		"./hooks/*": "./src/hooks/*.ts",
		"./test-utils/*": "./src/test-utils/*.ts"
	}
}
