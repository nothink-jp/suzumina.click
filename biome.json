{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "all"
    }
  },
  "files": {
    "include": ["**/*.{ts,tsx,js,jsx}"],
    "ignore": [
      "**/node_modules",
      "**/dist",
      "**/.next",
      "**/storybook-static",
      "**/coverage"
    ]
  }
}
