{
	"$schema": "https://biomejs.dev/schemas/2.0.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "**/*.json", "**/*.mjs", "**/*.cjs"],
		"experimentalScannerIgnores": [
			"**/node_modules/**",
			"**/dist/**",
			"**/.next/**",
			"**/lib/**",
			"**/storybook-static/**",
			"**/coverage/**",
			"**/build/**",
			"**/*.d.ts",
			"**/test-results/**",
			"**/playwright-report/**",
			"**/.vitest/**",
			"**/.cache/**",
			"**/.turbo/**",
			"**/terraform/.terraform/**"
		],
		"maxSize": 5242880
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noNodejsModules": "off",
				"useExhaustiveDependencies": "warn"
			},
			"suspicious": {
				"noConsole": "warn",
				"noExplicitAny": "warn",
				"noArrayIndexKey": "warn",
				"noSkippedTests": "warn"
			},
			"style": {
				"noDefaultExport": "off",
				"noNonNullAssertion": "warn"
			},
			"performance": {
				"noDelete": "warn"
			},
			"complexity": {
				"noExcessiveCognitiveComplexity": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"trailingCommas": "all",
			"semicolons": "always",
			"arrowParentheses": "always"
		},
		"globals": ["vi", "process", "global", "globalThis", "Buffer", "console"]
	},
	"json": {
		"parser": {
			"allowComments": true,
			"allowTrailingCommas": true
		},
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"overrides": [
		{
			"includes": [
				"**/*.test.ts",
				"**/*.test.tsx",
				"**/*.spec.ts",
				"**/*.spec.tsx",
				"**/vitest.setup.ts"
			],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off",
						"noConsole": "off",
						"noEmptyBlockStatements": "off"
					},
					"style": {
						"noNonNullAssertion": "off"
					},
					"performance": {
						"noDelete": "off"
					}
				}
			}
		},
		{
			"includes": [
				"**/*.config.js",
				"**/*.config.ts",
				"**/*.config.mjs",
				"**/next.config.js",
				"apps/web/src/app/**/page.tsx",
				"apps/web/src/app/**/layout.tsx",
				"apps/web/src/app/**/loading.tsx",
				"apps/web/src/app/**/error.tsx",
				"apps/web/src/app/**/not-found.tsx"
			],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off"
					},
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			}
		},
		{
			"includes": ["**/*.stories.ts", "**/*.stories.tsx"],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off"
					},
					"suspicious": {
						"noExplicitAny": "off",
						"noConsole": "off"
					}
				}
			}
		},
		{
			"includes": ["**/terraform/**", "**/coverage/**"],
			"linter": {
				"enabled": false
			},
			"formatter": {
				"enabled": false
			}
		}
	],
	"assist": {
		"enabled": true
	}
}
